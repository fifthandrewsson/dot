set $super Mod4

set $alt Mod1

# Font for window titles
#font pango:monospace 8
font pango:terminus 0

# Use Mouse+$super to drag floating windows to their wanted position
floating_modifier $super

# start a terminal
#bindsym $super+Return exec i3-sensible-terminal
bindsym $super+Return exec urxvt

# kill focused window
bindsym $super+Shift+q kill

# start i3-dmenu-desktop which only displays applications
# shipping a .desktop file
bindsym $super+d exec --no-startup-id i3-dmenu-desktop --dmenu="dmenu -fn 'terminus-font:normal:pixelsize=12' -b -nb '#000000' -sf '#bbbbbb' -sb '#285577' -nf '#bbbbbb'"

# start dmenu (a program launcher)
bindsym $super+Shift+d exec dmenu_run -fn 'terminus-font:normal:pixelsize=12'  -b -nb '#000000' -sf '#bbbbbb' -sb '#285577' -nf '#ffffff'

# start rofi (a program laucher)
bindsym $super+Control+r exec rofi -show drun -theme "dark" -icon-theme "Moka" -show-icons -font "Hack 10" -xoffset "-480" -yoffset "350"

# start dmenu + fzf
#bindsym $super+d exec --no-startup-id termite -t 'fzf' -e 'i3-dmenu-desktop --dmenu=fzf'
#for_window [title="fzf"] floating enable

# change focus
bindsym $super+h focus left
bindsym $super+j focus down
bindsym $super+k focus up
bindsym $super+l focus right

# this pass through the windows
bindsym $alt+Tab focus right
bindsym $alt+Shift+Tab focus left

# this pass through the workspaces
bindsym $super+Tab workspace next
bindsym $super+Shift+Tab workspace prev

# move focused window
bindsym $super+Shift+h move left 20 px
bindsym $super+Shift+j move down 20 px
bindsym $super+Shift+k move up 20 px
bindsym $super+Shift+l move right 20 px

# Resizing window by 1
bindsym $super+Ctrl+Left resize shrink width 20 px or 20 ppt
bindsym $super+Ctrl+Down resize grow height 20 px or 20 ppt
bindsym $super+Ctrl+Up resize shrink height 20 px or 20 ppt
bindsym $super+Ctrl+Right resize grow width 20 px or 20 ppt

# Resizing window by 10
bindsym $super+Ctrl+Shift+Left resize shrink width 1 px or 1 ppt
bindsym $super+Ctrl+Shift+Down resize grow height 1 px or 1 ppt
bindsym $super+Ctrl+Shift+Up resize shrink height 1 px or 1 ppt
bindsym $super+Ctrl+Shift+Right resize grow width 1 px or 1 ppt

# split in horizontal orientation
bindsym $super+Control+h split h

# split in vertical orientation
bindsym $super+Control+v split v

# enter fullscreen mode for the focused container
bindsym $super+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $super+s layout stacking
bindsym $super+w layout tabbed
bindsym $super+e layout toggle split

# toggle tiling / floating
bindsym $super+Shift+space floating toggle move position 10px 10px resize set 1900px 1050px

# change focus between tiling / floating windows
bindsym $super+space focus mode_toggle

# focus the parent container
bindsym $super+a focus parent

# focus the child container
bindsym $super+Shift+a focus child

# Define names for default workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $super+1 workspace $ws1
bindsym $super+2 workspace $ws2
bindsym $super+3 workspace $ws3
bindsym $super+4 workspace $ws4
bindsym $super+5 workspace $ws5
bindsym $super+6 workspace $ws6
bindsym $super+7 workspace $ws7
bindsym $super+8 workspace $ws8
bindsym $super+9 workspace $ws9
bindsym $super+0 workspace $ws10

# move focused container to workspace
bindsym $super+Shift+1 move container to workspace $ws1
bindsym $super+Shift+2 move container to workspace $ws2
bindsym $super+Shift+3 move container to workspace $ws3
bindsym $super+Shift+4 move container to workspace $ws4
bindsym $super+Shift+5 move container to workspace $ws5
bindsym $super+Shift+6 move container to workspace $ws6
bindsym $super+Shift+7 move container to workspace $ws7
bindsym $super+Shift+8 move container to workspace $ws8
bindsym $super+Shift+9 move container to workspace $ws9
bindsym $super+Shift+0 move container to workspace $ws10

# reload the configuration file
bindsym $super+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $super+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $super+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Colors
set $white #ffffff
set $black #000000

# class                 border  bground text    indicator child_border
client.focused          #4C7899 #285577 #bbbbbb #2E9EF4   #285577
client.focused_inactive #888888 #5F676A #bbbbbb #484E50   #5F676A
client.unfocused        #333333 #222222 #888888 #292D2E   #222222
client.urgent           #ff8888 #ff5555 #ffffff #ff5555   #ff5555
client.placeholder      #000000 #0C0C0C #bbbbbb #000000   #0C0C0C
client.background       #FFFFFF

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        font -xos4-terminus-medium-r-normal--12-120-72-72-c-60-iso10646-1
        #font -xos4-terminus-medium-r-normal--14-140-72-72-c-80-iso10646-1
        #font -*-terminus-medium-r-normal--16-*-*-*-*-*-*-*
        status_command python3 ~/.config/i3/status.py
        #status_command i3status --config ~/.config/i3/i3status.conf
        #status_command i3status
        position bottom
        padding -2px 1px
        verbose	yes
        separator_symbol "  "
        tray_padding 0
        mode dock
        colors {
            background #000000
            statusline #bbbbbb
            separator #bbbbbb
            #                  border  bground text
            focused_workspace  #4c7899 #285577 #bbbbbb
            active_workspace   #333333 #5f676a #bbbbbb
            inactive_workspace #333333 #222222 #888888
            urgent_workspace   #ff8888 #ff5555 #bbbbbb
            binding_mode       #000000 #000000 #bbbbbb
        }
}

# redshift modes
bindsym $super+comma mode "$mode_redshift"
set $mode_redshift Set colour temperature: (a)uto, (r)eset, (2)500K, (3)000K, (4)000K, (5)000K
set $kill_redshift pkill -9 redshift;
mode "$mode_redshift" {
    bindsym a exec --no-startup-id "$kill_redshift redshift -P -t 5000:4000", mode "default"
    bindsym r exec --no-startup-id "$kill_redshift redshift -x", mode "default"
    bindsym 2 exec --no-startup-id "$kill_redshift redshift -P -O 2500", mode "default"
    bindsym 3 exec --no-startup-id "$kill_redshift redshift -P -O 3000", mode "default"
    bindsym 4 exec --no-startup-id "$kill_redshift redshift -P -O 4000", mode "default"
    bindsym 5 exec --no-startup-id "$kill_redshift redshift -P -O 5000", mode "default"

    # exit mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# window sizes modes
bindsym $super+m mode "$mode_window_size"
set $mode_window_size Set window size: (1)1920x1080, (2)1900x1050, (3)800x600 
mode "$mode_window_size" {
    bindsym 1 exec --no-startup-id "i3-msg floating enable move position 10px 10px resize set 1920px 1080px", mode "default"
    bindsym 2 exec --no-startup-id "i3-msg floating enable move position 10px 10px resize set 1900px 1050px", mode "default"
    bindsym 3 exec --no-startup-id "i3-msg floating enable move position 10px 10px resize set 800px 600px", mode "default"
    bindsym 4 exec --no-startup-id "i3-msg floating enable move position 10px 10px resize set 800px 1050px", mode "default"

    # exit mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl -- set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl -- set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Screen brightness controls
bindsym XF86MonBrightnessUp exec sh ~/.config/i3/backlight.sh -inc 20
bindsym XF86MonBrightnessDown exec sh ~/.config/i3/backlight.sh -dec 20

# Shortcut for Lockscreen
bindsym $super+x exec sh ~/.config/i3/lock.sh

# Window titles
#for_window [class=".*"] title_format "░░ %class"

# Remove focus on mouse move
focus_follows_mouse no

# Borders
hide_edge_borders smart_no_gaps
#default_border pixel 1
#default_floating_border pixel 1
for_window [class="^.*"] border normal 1

floating_minimum_size 50 x 50
floating_maximum_size 1920 x 1080

# Add icons to the windows
for_window [class=".*"] title_window_icon no
#for_window [class=".*"] title_window_icon padding 3px

