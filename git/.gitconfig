[user]
    email = vanderson@tutamail.com
    name = Vanderson Rodrigues

[merge]
    conflictStyle = diff3

[magit]
    hideCampaign = true

[alias]
    tree = log --graph --decorate --pretty=oneline --abbrev-commit --all

[core]
    editor = vi

[init]
    defaultBranch = main

[pull]
    rebase = true 

[fetch]
    prune = true

[rerere]
    enabled = 1

[diff]
    tool = diffuse
    #tool = difftastic
    #tool = meld

[difftool]
    prompt = false

[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"

[pager]
    difftool = true

[includeIf "gitdir:~/Desktop/Projects/EDGE/"]
    path = ~/.gitconfig.edge
